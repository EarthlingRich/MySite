@model CreateWatchedViewModel

@using (Html.BeginForm("Create", "Watched")) {
    @Html.HiddenFor(_ => _.Request.TmdbId)
    <div class="flex">
        <img style="min-width: 185px;" class="float-left mr-2" src="https://image.tmdb.org/t/p/w185/@Model.Poster" />
        <div class="flex-grow">
            <div class="text-2xl">
                @Model.Title
                @if (Model.ReleaseDate != null)
                {
                    <span>(@Model.ReleaseDate.Value.Year)</span>
                }
            </div>
            <div>@Model.Overview</div>
        </div>
    </div>
    <div class="pt-2">
        <a href="/Watched" class="button button__secondary" type="button">Cancel</a>
        <button class="button button__primary" type="submit">Save</button>
    </div>
}