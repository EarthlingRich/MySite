@model List<ListPlayedViewModel>

@foreach(var played in Model) {
    <div class="flex w-1/5 mb-2">
        <div class="flex flex-col flex-grow bg-green-500 shadow mr-2 cursor-pointer" onclick="Played.SelectForUpdate(@played.Id)">
            @if (!string.IsNullOrEmpty(played.CoverPath))
            {
                <img class="w-full h-full block object-cover object-center" style="max-height: 400px;" src="https:@played.CoverPath" alt="@played.Title poster"/>
            }
            else
            {
                <div class="flex-grow p-2 text-white text-shadow">@played.Title</div>
            }
            <div class="bg-gray-700 text-white font-semibold text-center py-1" text-center">@played.Rating</div>
        </div>
    </div>
}