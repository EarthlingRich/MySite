@model SelectMovieViewModel

@foreach (var movieResult in Model.MovieResults)
{
    <div class="w-1/4 mb-1">
        <div class="relative bg-green-500 h-full shadow-md hover:shadow-lg mr-1" onclick="Add.SelectMovie(@movieResult.Id)">
            @if (!string.IsNullOrEmpty(movieResult.Backdrop))
            {
                <img class="w-full block object-contain" src="https://image.tmdb.org/t/p/w500/@movieResult.Backdrop" />
            }
            <div class="absolute left-0 top-0 mt-2 ml-2 text-white font-semibold leading-none">@movieResult.Title 
            @if (movieResult.ReleaseDate != null) {
                <span>(@movieResult.ReleaseDate.Value.Year)</span>
            }
            </div>
        </div>
    </div>
}
